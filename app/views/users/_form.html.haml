- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password, f.object.new_record? ? nil : "Mudar Senha"
    %br
    = f.password_field :password
  %p
    = f.label "Confirmar Senha"
    %br
    = f.password_field :password_confirmation
  %p
    = f.submit "Submit"
